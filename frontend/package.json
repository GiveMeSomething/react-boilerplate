        "react-router-dom": "^5.3.0",
        "react-scripts": "^5.0.0",
        "sass": "^1.32.5"
    },
    "devDependencies": {
        "@types/node": "^14.14.13",
        "@types/react": "^17.0.30",
        "@types/react-dom": "^17.0.0",
        "@types/react-redux": "^7.1.16",
        "@types/react-router-dom": "^5.3.1",
